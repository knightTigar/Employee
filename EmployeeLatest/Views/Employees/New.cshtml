@model EmployeeLatest.ViewModel.EmployeeViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>
@using (Html.BeginForm("Save", "Employees"))
{
    <div class="form-group">
        @Html.LabelFor(e => e.EmployeeSalary.EmpName)
        @Html.TextBoxFor(e => e.EmployeeSalary.EmpName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.EmployeeSalary.Salary)
        @Html.TextBoxFor(e => e.EmployeeSalary.Salary, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.EmployeeSalary.DepaId)
        @Html.DropDownListFor(e => e.EmployeeSalary.DepaId, new SelectList(Model.Department, "DepartmentId", "DepartmentName"), "Select Department", new { @class = "form-control" })
    </div>

    @Html.HiddenFor(e => e.EmployeeSalary.EmpId)
    <button type="submit" class="btn btn-primary">Save</button>
}

